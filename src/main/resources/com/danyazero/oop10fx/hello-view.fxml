<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.danyazero.oop10fx.HelloController">
   <HBox spacing="20.0">
          <VBox>
               <Label text="Кількість інтервалів" />
               <TextField fx:id="intervalsCount" text="100000000">
            <VBox.margin>
               <Insets bottom="8.0" top="8.0" />
            </VBox.margin></TextField>
              <Label text="Кількість потоків" />
              <TextField fx:id="threadsCount" text="20">
            <VBox.margin>
               <Insets bottom="8.0" top="8.0" />
            </VBox.margin></TextField>
            <Button mnemonicParsing="false" onAction="#startCalculationHandler" text="Запустити!" />
          </VBox>
          <VBox>
              <Label text="Обчислене значення інтегралу" />
              <Label fx:id="calculatedIntervalValue" text="--" />
              <Label text="Час виконання" />
              <Label fx:id="calculatedTimeValue" text="--" />
          </VBox>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
   </HBox>
</AnchorPane>
